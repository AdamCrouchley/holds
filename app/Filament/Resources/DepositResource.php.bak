<?php

namespace App\Filament\Resources;

use App\Models\Deposit;
use Filament\Resources\Resource;
use App\Filament\Resources\DepositResource\Pages; // ✅ correct Pages import

class DepositResource extends Resource {
    protected static ?string $slug = 'deposits';
    protected static bool $shouldRegisterNavigation = false;
    protected static ?string $model = Deposit::class;
    protected static ?string $slug  = 'deposits';

    public static function getPages(): array
    {
        return [
            'index'  => Pages\ListDeposits::route('/'),          // ✅ provides ...deposits.index
            'create' => Pages\CreateDeposit::route('/create'),
            'view'   => Pages\ViewDeposit::route('/{record}'),
            'edit'   => Pages\EditDeposit::route('/{record}/edit'),
        ];
    }

    // Keep this simple. Must return ?string (not array).
    public static function getNavigationBadgeColor(): ?string
    {
        return 'primary';
    }

    // Optional: show a count as badge (must be string or null)
    public static function getNavigationBadge(): ?string
    {
        return (string) static::getModel()::count();
    }
}
